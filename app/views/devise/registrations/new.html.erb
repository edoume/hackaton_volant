<style>
  body {
    background-image:url(http://media.giphy.com/media/13bGgH9VnEDsuA/giphy.gif);
    background-position: center center;
    background-repeat: no-repeat; 
    background-attachment: fixed; 
    background-size: cover; 
  }
  
  #cloud {color:#3693ea;}

  .jumbotron {background-color: rgba(255, 255, 255, 0.3)}

</style>

<div class="jumbotron">
<div class="text-center">

<h2>Inscrivez-vous</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :mot_de_passe %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmation_du_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Finaliser l'inscription", class: "btn btn-info btn-md" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>